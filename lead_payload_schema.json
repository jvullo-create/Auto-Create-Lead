{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lead Payload Schema",
  "description": "Schema for extracting key Bizcap lead fields",
  "type": "object",
  "properties": {
    "companyName": { "type": "string" },
    "firstName": { "type": "string" },
    "lastName": { "type": "string" },
    "abn": { "type": "string" },
    "phone": {
      "type": "string",
      "pattern": "^\\+?[1-9]\\d{1,14}$"
    },
    "email": {
      "type": "string",
      "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$"
    },
    "amountRequested": {
      "type": "number",
      "minimum": 0
    },
    "averageMonthlyTurnover": {
      "type": "number",
      "minimum": 0
    },
    "documentId": { "type": "string" },
    "loanPurpose": { "type": "string" },
    "brokerContactName": { "type": "string" },
    "brokerContactEmail": {
      "type": "string",
      "format": "email"
    },
    "brokerContactNumber": {
      "type": "string",
      "pattern": "^\\+?[1-9]\\d{1,14}$"
    },
    "brokerBusinessName": { "type": "string" },
    "callClientOrBroker": {
      "type": "string",
      "enum": ["Call Client", "Call Broker"]
    }
  },
  "required": [
    "companyName",
    "firstName",
    "lastName"
  ],
  "additionalProperties": false
}
